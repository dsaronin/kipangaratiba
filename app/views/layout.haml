!!! 1.1
%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en") 
  %head
    %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
    %meta(http-equiv="X-UA-Compatible" content="chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="description" content="User-env cron-like scheduler")

    %link(rel="stylesheet" href="/css/stylesheet.css")
    %link(rel="icon" sizes="192x192" href="/images/favicon.ico?" type="image/x-icon")

    %title Kipangaratiba&trade;

  %body
    .container{id: [@dark_background  ?  "darkbg"  :  "lightbg"]}

      #header
        = link_to( image_tag( "/images/flash-icon-2.png", {:class => 'logo',:alt => 'Kipangaratiba logo'} ) , '/', { :title => "main page" } )
        %h3 Kipangaratiba
      
      #wrapper
        #actionbox
          = haml @action_box
          = haml :flasher

        #content
          != yield
        
      #footer
        %p
          &copy;&nbsp;
          =link_to("Copyright 2025 David S. Anderson, All rights reserved ","/about")
          &emsp;&bull;&emsp;v#{Kipangaratiba::Environ.kipangaratiba_version} &ensp;
